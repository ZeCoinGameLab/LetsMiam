<div class="container-fluid">
  <div class="container-fluid h-130">
    <h1 class="d-none">LetsMIAM</h1>
    <%= image_tag("logo.png", width: 400, class: "mx-auto d-block pt-5px") %>
  </div>

  <%= render 'layouts/navbar', actual_page: 1 %>

  <div class="container-xxl">
    <a class="anchor" id="my-groups"></a>
    <h2 class="mt-3 mb-3 d-inline-block">Mes groupes</h2>
    <%= link_to new_group_path, class: "d-inline-block display-5", role: "button" do %>
      <i class="bi bi-plus-circle link-info text-decoration-none"></i>
    <% end %>
    <div class="row row-cols-1 row-cols-md-4 row-cols-lg-4 g-4">
      <% if !@groups.empty? %>
        <% @groups.each do |group| %>
          <div class="col">
            <div class="btn-group mb-2">
              <div class="btn-group" role="group">
                <button id="btnGroupDrop1" type="button" class="btn btn-outline-info dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                  <%= group.name %>
                </button>
                <ul class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                  <% group.users.each do |user| %>
                  <li><p class="mb-0 dropdown-item"><%= user.nickname %></p></li>
                  <% end %>
                </ul>
              </div>
              <%= link_to new_invitation_path, class: "btn btn-outline-info", role: "button" do %>
                <i class="bi bi-calendar-plus text-dark text-decoration-none"></i>
              <% end %>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="col">
          <p>Vous n'avez aucun groupe pour le moment.</p>
        </div>
      <% end %>
    </div>
  </div>

  <div class="container-xxl">
    <a class="anchor" id="my-invitations"></a>
    <h2 class="mt-3 mb-3 d-inline-block">Mes invitations</h2>
    <%# if defined?(from_home) %>   <%#= link_to("(Tout voir ...)", restaurants_best_score_path, method: 'get', class: 'homepage-link d-inline-block') %><%#end %>
    <div class="row row-cols-1 g-4">
      <% if !@invitations.empty? %>
        <% @invitations.each do |invitation| %>
          <div class="col">
            <div class="card h-100">
              <div class="card-body">
                <h3 class="card-title d-inline-block"><%= invitation.name %></h3>
                <h3 class="card-title d-inline-block">... Groupe : <%= invitation.group.name %></h3>
                <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
                  <%= render 'restaurants/cards_invit', restaurants: invitation.restaurants %>
                </div>
                <% invitation.association_user_invits.each_with_index do |user_invit, index_loop| %>
                  <% if Current.user == user_invit.user %>
                    <%= form_with model: user_invit, local: false, method: 'PATCH' do |form| %>
                      <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
                        <% invitation.restaurants.length.times do |index| %>
                          <div class="<% if index_loop.even? %>bg-light<% end %> col">
                            <fieldset id="association_user_invit[vote]['+<%= index.to_s %>+']'">
                              <div class="row row-cols-2 justify-content-center">
                                <div class="col-auto form-check">
                                  <% if !user_invit.vote.nil? && user_invit.vote.to_s(2).reverse[index] == "1" %>
                                    <%= form.radio_button :vote, '1', class: 'form-check-input vote-box', checked: 'checked', name: 'association_user_invit[vote]['+index.to_s+']' %>
                                  <% else %>
                                    <%= form.radio_button :vote, '1', class: 'form-check-input vote-box', name: 'association_user_invit[vote]['+index.to_s+']' %>
                                  <% end %>
                                  <i class="form-check-label vote-box-label text-success bi bi-check2-circle"></i>
                                </div>
                                <div class="col-auto form-check">
                                  <% if !user_invit.vote.nil? && user_invit.vote.to_s(2).reverse[index] == "0" %>
                                    <%= form.radio_button :vote, '0', class: 'form-check-input vote-box', checked: 'checked', name: 'association_user_invit[vote]['+index.to_s+']' %>
                                  <% else %>
                                    <%= form.radio_button :vote, '0', class: 'form-check-input vote-box', name: 'association_user_invit[vote]['+index.to_s+']' %>
                                  <% end %>
                                  <i class="form-check-label vote-box-label fs-custom-1 text-danger bi bi-x-circle"></i>
                                </div>
                              </div>
                            </fieldset>
                          </div>
                        <% end %>
                        <div class="text-center col-auto <% if index_loop.even? %>bg-light<% end %>">
                          <h4><%= user_invit.user.nickname %></h4>
                        </div>
                      </div>
                    <% end %>
                  <% else %>
                    <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
                      <% invitation.restaurants.length.times do |index| %>
                        <div class="text-center <% if index_loop.even? %>bg-light<% end %> col">
                          <% !user_invit.vote.nil? && if user_invit.vote.to_s(2).reverse[index] == "1" %>
                            <i class="form-check-label vote-box-label text-success bi bi-check2-circle"></i>
                          <% else %>
                            <i class="form-check-label vote-box-label fs-custom-1 text-danger bi bi-x-circle"></i>
                          <% end %>
                        </div>
                      <% end %>
                      <div class="text-center col-auto <% if index_loop.even? %>bg-light<% end %>">
                        <h4><%= user_invit.user.nickname %></h4>
                      </div>
                    </div>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="col">
          <p>Vous n'avez aucune invitation pour le moment.</p>
        </div>
      <% end %>
    </div>
  </div>

</div>

<%= javascript_pack_tag 'association_user_invits_update.js' %>