<div class="container-fluid">
  <div class="container-fluid h-130">
    <h1 class="d-none">LetsMIAM</h1>
    <%= image_tag("logo.png", width: 400, class: "mx-auto d-block pt-5px") %>
  </div>

  <%= render 'layouts/navbar', actual_page: 1 %>

  <% if Current.user %>
    Logged in as: <%= Current.user.nickname %><br>
    <%= link_to 'Edit Password', edit_password_path %>
    <%= button_to 'Logout', logout_path, method: :delete %>
  <% else %>
    <%= link_to 'Sign Up', sign_up_path %>
    or
    <%= link_to 'Login', sign_in_path %>
  <% end %>

  <%= render 'homepage/food_tags', food_tags: @food_tags %>
  <%= render 'restaurants/best_score', restaurants: @best_rest, from_home: true %>
  <%= render 'restaurants/selections', restaurants: @selection_rest, from_home: true %>
  <%= render 'restaurants/discover', restaurants: @discover_rest,from_home: true %>
</div>
<%= javascript_pack_tag 'restaurant_index.js' %>
